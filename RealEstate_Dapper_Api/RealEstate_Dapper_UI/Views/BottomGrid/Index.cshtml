@model List<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öne Çıkan Alan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Icon</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.icon</td>
                                    <td>@item.title</td>
                                    <td>@item.description</td>
                                    <td><a href="/BottomGrid/DeleteBottomGrid/@item.bottomGridID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.bottomGridID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/BottomGrid/CreateBottomGrid/" class="btn btn-outline-info">Yeni Öne Çıkan Alan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
